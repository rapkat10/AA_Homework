<h1><%= @band.name %></h1>

<h4>Albums</h4>

<% @band.albums.each do |album| %>
  <a href="<%= album_url(album) %>"><p><%= album.title %></p></a>
<% end %>

<h4>Links</h4>
<ul class='links'>
  <li><a class='button' href="<%= new_band_album_url(@band) %>">New album <br></a></li>
  <li><a class='button' href="<%= edit_band_url(@band) %>">Edit Band<br></a></li>
  <li>
    <form action="<%= band_url(@band) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
      <input type="submit" value="Destroy Band">
    </form>
  </li>
  <li><a class='button' href="<%= bands_url %>">All bands</a></li>
</ul>